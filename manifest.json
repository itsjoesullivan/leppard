{
  "name": "leppard",
	"version": "1.0.0",
  "description": "simple spotify playlist view.",
  "manifest_version": 2, 
  "background": { "scripts": ["background.js"] },
  "page_action": {
    "default_title": "leppard",
		"default_icon": {
			"19": "icon/19.png",
			"38": "icon/38.png"
		}
  },
  "icons": {
	"16": "icon/16.png",
	"64": "icon/64.png",
	"48": "icon/48.png",
	"128": "icon/128.png"
	"256": "icon/256.png"
  },
  "content_scripts": [
    {
      "matches": ["https://play.spotify.com/*"],
      "css": ["style.css"],
      "js": ["embed.js"]
    }
  ],
  "permissions" : [
	    "tabs"
	],
  "web_accessible_resources": ["index.js", "toggle.js"]
}

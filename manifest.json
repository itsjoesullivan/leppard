{
  "name": "leppard",
	"version": "1.0.0",
  "description": "simple spotify playlist view.",
  "manifest_version": 2, 
  "background": { "scripts": ["background.js"] },
  "page_action": {
    "default_title": "leppard"
  },
  "content_scripts": [
    {
      "matches": ["https://play.spotify.com/*"],
      "css": ["style.css"],
      "js": ["embed.js"]
    }
  ],
  "permissions" : [
	    "tabs"
	],
  "web_accessible_resources": ["index.js", "toggle.js"]
}
